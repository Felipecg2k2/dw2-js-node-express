<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= titulo %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <%- include('partials/navbar') %>

    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Gerenciar Pok√©mons</h1>
            <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#modalPokemon">
                ‚ûï Adicionar Pok√©mon
            </button>
        </div>

        <!-- ‚úÖ CORRE√á√ÉO: Verifica√ß√£o segura do error -->
        <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-danger">
                <%= error %>
            </div>
        <% } %>

        <!-- LISTA DE POK√âMONS -->
        <div class="card shadow-sm">
            <div class="card-header bg-dark text-white">
                Pok√©mons Cadastrados
            </div>
            <div class="card-body p-0">
                <% if (pokemons && pokemons.length > 0) { %>
                    <table class="table table-striped table-hover mb-0">
                        <thead class="thead-dark">
                            <tr>
                                <th>N√∫mero</th>
                                <th>Nome</th>
                                <th>Tipo</th>
                                <th>A√ß√µes</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% pokemons.forEach((p) => { %>
                                <tr>
                                    <td><%= p.numero %></td>
                                    <td><%= p.nome %></td>
                                    <td>
                                        <span class="badge bg-info">
                                            <%= p.tipo1 %><% if (p.tipo2) { %>/<%= p.tipo2 %><% } %>
                                        </span>
                                    </td>
                                    <td>
                                        <!-- BOT√ÉO EDITAR -->
                                        <button class="btn btn-sm btn-warning me-1" 
                                                data-bs-toggle="modal" 
                                                data-bs-target="#modalEditar"
                                                data-id="<%= p.id %>"
                                                data-numero="<%= p.numero %>"
                                                data-nome="<%= p.nome %>"
                                                data-tipo1="<%= p.tipo1 %>"
                                                data-tipo2="<%= p.tipo2 %>">
                                            ‚úèÔ∏è
                                        </button>
                                        
                                        <!-- BOT√ÉO DELETAR -->
                                        <form action="/pokemons/deletar/<%= p.id %>" method="POST" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-danger" 
                                                    onclick="return confirm('Tem certeza que deseja deletar este Pok√©mon?')">
                                                üóëÔ∏è
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                <% } else { %>
                    <div class="p-3 text-center text-muted">
                        Nenhum Pok√©mon cadastrado.
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <!-- MODAL PARA ADICIONAR POK√âMON -->
    <div class="modal fade" id="modalPokemon" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Adicionar Pok√©mon</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form action="/pokemons" method="POST">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">N√∫mero</label>
                            <input type="number" class="form-control" name="numero" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Nome</label>
                            <input type="text" class="form-control" name="nome" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Tipo 1</label>
                            <select class="form-select" name="tipo1" required>
                                <% tipos.forEach(tipo => { %>
                                    <option value="<%= tipo %>"><%= tipo %></option>
                                <% }); %>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Tipo 2 (opcional)</label>
                            <select class="form-select" name="tipo2">
                                <option value="">Nenhum</option>
                                <% tipos.forEach(tipo => { %>
                                    <option value="<%= tipo %>"><%= tipo %></option>
                                <% }); %>
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-success">Salvar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- MODAL PARA EDITAR POK√âMON -->
    <div class="modal fade" id="modalEditar" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Editar Pok√©mon</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form action="/pokemons/editar/" method="POST" id="formEditar">
                    <div class="modal-body">
                        <input type="hidden" name="id" id="editarId">
                        <div class="mb-3">
                            <label class="form-label">N√∫mero</label>
                            <input type="number" class="form-control" name="numero" id="editarNumero" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Nome</label>
                            <input type="text" class="form-control" name="nome" id="editarNome" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Tipo 1</label>
                            <select class="form-select" name="tipo1" id="editarTipo1" required>
                                <% tipos.forEach(tipo => { %>
                                    <option value="<%= tipo %>"><%= tipo %></option>
                                <% }); %>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Tipo 2 (opcional)</label>
                            <select class="form-select" name="tipo2" id="editarTipo2">
                                <option value="">Nenhum</option>
                                <% tipos.forEach(tipo => { %>
                                    <option value="<%= tipo %>"><%= tipo %></option>
                                <% }); %>
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-warning">Atualizar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        // Preencher modal de edi√ß√£o com dados do Pok√©mon
        document.addEventListener('DOMContentLoaded', function() {
            const modalEditar = document.getElementById('modalEditar');
            
            modalEditar.addEventListener('show.bs.modal', function(event) {
                const button = event.relatedTarget;
                
                // Pegar dados do bot√£o
                const id = button.getAttribute('data-id');
                const numero = button.getAttribute('data-numero');
                const nome = button.getAttribute('data-nome');
                const tipo1 = button.getAttribute('data-tipo1');
                const tipo2 = button.getAttribute('data-tipo2');
                
                // Atualizar action do form
                document.getElementById('formEditar').action = `/pokemons/editar/${id}`;
                
                // Preencher campos
                document.getElementById('editarId').value = id;
                document.getElementById('editarNumero').value = numero;
                document.getElementById('editarNome').value = nome;
                document.getElementById('editarTipo1').value = tipo1;
                document.getElementById('editarTipo2').value = tipo2 || '';
            });
        });
    </script>
</body>
</html>