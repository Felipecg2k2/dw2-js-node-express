<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= titulo %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/pokemons.css" rel="stylesheet">
</head>
<body>
    <%- include('partials/navbar') %>

    <div class="container mt-4">
        <div class="custom-card">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1>Gerenciar Pok√©mons</h1>
                    <p class="text-muted">Sistema completo de gerenciamento de Pok√©mons cadastrados</p>
                </div>
                <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#modalPokemon">
                    ‚ûï Adicionar Pok√©mon
                </button>
            </div>

            <% if (typeof error !== 'undefined' && error) { %>
                <div class="alert alert-danger">
                    <%= error %>
                </div>
            <% } %>

            <!-- LISTA DE POK√âMONS -->
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">Pok√©mons Cadastrados</h5>
                </div>
                <div class="card-body p-0">
                    <% if (pokemons && pokemons.length > 0) { %>
                        <table class="table table-striped table-hover mb-0">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Imagem</th>
                                    <th>N√∫mero</th>
                                    <th>Nome</th>
                                    <th>Tipo</th>
                                    <th style="width: 250px;">A√ß√µes</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% pokemons.forEach((p) => { %>
                                    <tr>
                                        <td>
                                            <% if (p.imagem) { %>
                                                <img src="<%= p.imagem %>" alt="<%= p.nome %>" class="pokemon-image" 
                                                     onclick="ampliarImagem('<%= p.imagem %>', '<%= p.nome %>')" style="cursor: pointer;">
                                            <% } else { %>
                                                <div class="no-image">Sem imagem</div>
                                            <% } %>
                                        </td>
                                        <td><strong><%= p.numero %></strong></td>
                                        <td><%= p.nome %></td>
                                        <td>
                                            <span class="type-badge">
                                                <%= p.tipo1 %><% if (p.tipo2) { %>/<%= p.tipo2 %><% } %>
                                            </span>
                                        </td>
                                        <td>
                                            <div class="btn-group-spaced">
                                                <button class="btn btn-sm btn-outline-primary btn-detalhes"
                                                        data-pokemon='<%= JSON.stringify(p) %>'>
                                                    üëÅÔ∏è Detalhes
                                                </button>
                                                
                                                <button class="btn btn-sm btn-outline-warning" 
                                                        data-bs-toggle="modal" 
                                                        data-bs-target="#modalEditar"
                                                        data-id="<%= p.id %>"
                                                        data-numero="<%= p.numero %>"
                                                        data-nome="<%= p.nome %>"
                                                        data-tipo1="<%= p.tipo1 %>"
                                                        data-tipo2="<%= p.tipo2 %>"
                                                        data-descricao="<%= p.descricao || '' %>"
                                                        data-altura="<%= p.altura || '' %>"
                                                        data-peso="<%= p.peso || '' %>"
                                                        data-habilidade="<%= p.habilidade || '' %>"
                                                        data-imagem="<%= p.imagem || '' %>">
                                                    ‚úèÔ∏è Editar
                                                </button>
                                                
                                                <form action="/pokemons/deletar/<%= p.id %>" method="POST" class="d-inline">
                                                    <button type="submit" class="btn btn-sm btn-outline-danger" 
                                                            onclick="return confirm('Tem certeza que deseja deletar <%= p.nome %>?')">
                                                        üóëÔ∏è Excluir
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    <% } else { %>
                        <div class="p-4 text-center text-muted">
                            <p class="mb-0">Nenhum Pok√©mon cadastrado.</p>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <!-- MODAL DETALHES COMPLETO -->
    <div class="modal fade" id="modalDetalhes" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Detalhes do Pok√©mon: <span id="detalhesNome"></span></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="detail-row">
                                <span class="detail-label">N√∫mero:</span>
                                <span class="detail-value" id="detalhesNumero"></span>
                            </div>
                            <div class="detail-row">
                                <span class="detail-label">Tipo:</span>
                                <span class="detail-value" id="detalhesTipo"></span>
                            </div>
                            <div class="detail-row">
                                <span class="detail-label">Altura:</span>
                                <span class="detail-value" id="detalhesAltura"></span>
                            </div>
                            <div class="detail-row">
                                <span class="detail-label">Peso:</span>
                                <span class="detail-value" id="detalhesPeso"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="detail-row">
                                <span class="detail-label">Habilidade:</span>
                                <span class="detail-value" id="detalhesHabilidade"></span>
                            </div>
                            <div class="detail-row">
                                <span class="detail-label">Imagem:</span>
                                <div id="detalhesImagemContainer" class="mt-2"></div>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-12">
                            <div class="detail-row">
                                <span class="detail-label">Descri√ß√£o:</span>
                                <p id="detalhesDescricao" class="mt-1 text-muted"></p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                </div>
            </div>
        </div>
    </div>

    <!-- MODAL ADICIONAR COMPLETO COM IMAGEM -->
    <div class="modal fade" id="modalPokemon" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Adicionar Pok√©mon</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form action="/pokemons" method="POST" enctype="multipart/form-data">
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">N√∫mero *</label>
                                    <input type="number" class="form-control" name="numero" required>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Nome *</label>
                                    <input type="text" class="form-control" name="nome" required>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Tipo 1 *</label>
                                    <select class="form-select" name="tipo1" required>
                                        <% tipos.forEach(tipo => { %>
                                            <option value="<%= tipo %>"><%= tipo %></option>
                                        <% }); %>
                                    </select>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Tipo 2 (opcional)</label>
                                    <select class="form-select" name="tipo2">
                                        <option value="">Nenhum</option>
                                        <% tipos.forEach(tipo => { %>
                                            <option value="<%= tipo %>"><%= tipo %></option>
                                        <% }); %>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Altura (m)</label>
                                    <input type="number" step="0.1" class="form-control" name="altura" placeholder="Ex: 0.7">
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Peso (kg)</label>
                                    <input type="number" step="0.1" class="form-control" name="peso" placeholder="Ex: 6.9">
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Habilidade</label>
                                    <input type="text" class="form-control" name="habilidade" placeholder="Ex: Superar">
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Imagem do Pok√©mon</label>
                                    <input type="file" class="form-control" name="imagem" id="imagemInput" accept="image/*" onchange="previewImage(this, 'previewImagem')">
                                    <small class="text-muted">Formatos: JPG, PNG, GIF. M√°x: 5MB</small>
                                    <img id="previewImagem" class="image-preview" alt="Preview da imagem">
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Descri√ß√£o</label>
                            <textarea class="form-control" name="descricao" rows="3" placeholder="Descri√ß√£o do Pok√©mon..."></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-success">Salvar Pok√©mon</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- MODAL EDITAR COMPLETO COM IMAGEM -->
    <div class="modal fade" id="modalEditar" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Editar Pok√©mon</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form action="/pokemons/editar/" method="POST" id="formEditar" enctype="multipart/form-data">
                    <div class="modal-body">
                        <input type="hidden" name="id" id="editarId">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">N√∫mero *</label>
                                    <input type="number" class="form-control" name="numero" id="editarNumero" required>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Nome *</label>
                                    <input type="text" class="form-control" name="nome" id="editarNome" required>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Tipo 1 *</label>
                                    <select class="form-select" name="tipo1" id="editarTipo1" required>
                                        <% tipos.forEach(tipo => { %>
                                            <option value="<%= tipo %>"><%= tipo %></option>
                                        <% }); %>
                                    </select>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Tipo 2 (opcional)</label>
                                    <select class="form-select" name="tipo2" id="editarTipo2">
                                        <option value="">Nenhum</option>
                                        <% tipos.forEach(tipo => { %>
                                            <option value="<%= tipo %>"><%= tipo %></option>
                                        <% }); %>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Altura (m)</label>
                                    <input type="number" step="0.1" class="form-control" name="altura" id="editarAltura">
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Peso (kg)</label>
                                    <input type="number" step="0.1" class="form-control" name="peso" id="editarPeso">
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Habilidade</label>
                                    <input type="text" class="form-control" name="habilidade" id="editarHabilidade">
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Imagem do Pok√©mon</label>
                                    <div id="currentImageContainer" class="mb-2">
                                        <small class="text-muted">Imagem atual:</small>
                                        <div id="currentImage" class="mt-1"></div>
                                    </div>
                                    <input type="file" class="form-control" name="imagem" id="editarImagemInput" accept="image/*" onchange="previewImage(this, 'previewEditarImagem')">
                                    <small class="text-muted">Deixe em branco para manter a imagem atual. Formatos: JPG, PNG, GIF. M√°x: 5MB</small>
                                    <img id="previewEditarImagem" class="image-preview" alt="Preview da nova imagem">
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Descri√ß√£o</label>
                            <textarea class="form-control" name="descricao" id="editarDescricao" rows="3"></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-warning">Atualizar Pok√©mon</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- MODAL PARA AMPLIAR IMAGEM -->
    <div class="modal fade" id="modalAmpliarImagem" tabindex="-1">
        <div class="modal-dialog modal-md">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="tituloImagemAmpliada"></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body text-center">
                    <img id="imagemAmpliada" src="" alt="" class="img-fluid" style="max-height: 70vh; object-fit: contain;">
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/pokemons.js"></script>
</body>
</html>