<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= titulo || "Pokémon App" %>
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .game-image {
            width: 80px;
            height: auto;
            display: block;
            margin: 0;
            /* Remove margem desnecessária da imagem */
            border-radius: 4px;
            box-shadow: 1px 1px 3px rgba(0, 0, 0, 0.2);
        }

        .secondary-images {
            display: flex;
            /* Permite que as capas fiquem lado a lado */
            gap: 5px;
            /* Espaço entre as capas */
            justify-content: center;
            /* Centraliza o bloco de capas na célula */
        }
    </style>
</head>

<body>
 
    <%- include('partials/navbar') %>

        <div class="container mt-5">

            <h1 class="text-center mb-4">Jogos e Plataformas Pokémon</h1>
            <p class="text-center mb-5">Catálogo de Jogos.</p>

            <!-- Estrutura da Tabela -->
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white">
                    Catálogo de Jogos
                </div>
                <div class="card-body p-0">
                    <% if (jogos && jogos.length> 0) { %>
                        <table class="table table-striped table-hover mb-0">
                            <thead class="thead-dark">
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Nome</th>
                                    <th scope="col">Capas dos Jogos</th>
                                    <th scope="col">Console</th>
                                    <th scope="col" class="text-end">Ano de Lançamento</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% jogos.forEach((jogo, index)=> { %>
                                    <tr>
                                        <th scope="row">
                                            <%= index + 1 %>
                                        </th>
                                        <td>
                                            <%= jogo.nome %>
                                        </td>
                                        <td>
                                            <div class="secondary-images">
                                                <% jogo.imagens.forEach(function(imagemPath) { %>
                                                    <img src="/imgs/<%= imagemPath %>" alt="Capa de <%= jogo.nome %>"
                                                        class="game-image">
                                                    <% }); %>
                                            </div>
                                        </td>
                                        <td>
                                            <%= jogo.console %>
                                        </td>
                                        <td class="text-end"><span class="badge bg-secondary">
                                                <%= jogo.ano %>
                                            </span></td>
                                    </tr>
                                    <% }); %>
                            </tbody>
                        </table>
                        <% } else { %>
                            <div class="p-3 text-center text-muted">Nenhum jogo encontrado no catálogo.</div>
                            <% } %>
                </div>
            </div>

            <p class="text-center mt-4"><a href="/" class="btn btn-outline-primary">Voltar para a Home</a></p>
        </div>
</body>
</html>