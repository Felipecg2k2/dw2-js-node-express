<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= titulo || "Pokémon App" %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        .trainer-image {
            width: 70px !important;       
            height: 70px !important;      
            object-fit: cover;            
            object-position: 50% 20%;     
            border-radius: 50%;           
            border: 2px solid #3b4cca;    
            display: block;
            margin: 0 auto;
            background-color: #f8f9fa;    
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.15); 
        }

        .portrait-cell {
            vertical-align: middle;
            text-align: center;
            width: 100px; 
        }


        .pokemon-icon {
            width: 40px; 
            height: 40px;
            margin-right: 5px;
            object-fit: contain;
        }

        .pokemon-team-cell {
            display: flex;
            align-items: center;
            justify-content: flex-start; 
            flex-wrap: wrap;
            gap: 5px; 
        }
    </style>
</head>
<body>
    <%- include('partials/navbar') %>

    <div class="container mt-5">
        <h1 class="text-center mb-4">Lista de Treinadores Pokémon</h1>
        <p class="text-center mb-5">Lista de Treinadores e suas equipes.</p>

        <div class="card shadow-sm">
            <div class="card-header bg-dark text-white">
                Treinadores Registrados
            </div>

            <div class="card-body p-0">
                <% if (treinadores && treinadores.length > 0) { %>
                    <table class="table table-striped table-hover mb-0 align-middle">
                        <thead class="thead-dark">
                            <tr>
                                <th scope="col" class="text-center">Retrato</th>
                                <th scope="col">Nome</th>
                                <th scope="col">Cidade</th>
                                <th scope="col">Equipe</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% treinadores.forEach((t) => { %>
                                <tr>
                                    <td class="portrait-cell"> 
                                        <img 
                                            src="/imgs/<%= t.imagem %>" 
                                            alt="Retrato de <%= t.nome %>" 
                                            class="trainer-image"
                                        >
                                    </td>
                                    <td><%= t.nome %></td>
                                    <td><%= t.cidade %></td>
                                    <td>
                                        <div class="pokemon-team-cell">
                                            <% t.equipe.forEach((pokemonNome) => { %>
                                                <% 
                                                    const imageName = pokemonNome
                                                        .toLowerCase()
                                                        .normalize("NFD").replace(/[\u0300-\u036f]/g, "")
                                                        .replace(/[^a-z0-9]/g, '') + '.png';
                                                %>
                                                <img 
                                                    src="/imgs/pokemons/<%= imageName %>" 
                                                    alt="<%= pokemonNome %>" 
                                                    title="<%= pokemonNome %>" 
                                                    class="pokemon-icon" 
                                                >
                                            <% }); %>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                <% } else { %>
                    <div class="card-body text-center text-muted py-5">
                        Nenhum treinador encontrado no catálogo.
                    </div>
                <% } %>
            </div>
        </div>

        <p class="text-center mt-4">
            <a href="/" class="btn btn-outline-primary">Voltar para a Home</a>
        </p>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
